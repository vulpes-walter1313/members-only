<main class="bg-slate-950 text-slate-50 px-4 min-h-screen">
  <div class="max-w-5xl mx-auto flex flex-col items-center gap-6 py-20">
    <h1 class="text-5xl font-bold max-w-md mx-auto text-center">Become A Member
      Today!</h1>
    {{#if wrongPassword}}
      <p>Nah, that&apos;s not the right password dawg!</p>
    {{/if}}
    <form
      method="post"
      class="bg-slate-800 p-4 rounded-md flex flex-col gap-4 w-80"
    >
      <div class="flex flex-col gap-2">
        <label
          for="memberpassword"
          class="text-lg font-medium max-w-80"
        >Members-Only Password:</label>
        <input
          type="text"
          id="memberpassword"
          name="memberpassword"
          class="rounded-md py-2 px-4 text-slate-900"
        />
      </div>
      <button class="bg-slate-50 text-slate-950 py-2 px-4 rounded-md">Let Me
        INNN!</button>
    </form>
  </div>
</main>